    "version": "0.2.0",
    "configurations": [{
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "runtimeExecutable": "/usr/lib64/chromium-browser/chromium-browser",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9228,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

    ]
}